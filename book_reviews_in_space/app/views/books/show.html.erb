<!-- show each book's detail -->
<div>
  </p>Title: <%= @book.title %><br>
  Description: <%= @book.description %><br>
  URL: <%= @book.url %><br>
  Role: <%= @book.user.role %><br>
  <%= link_to "Edit Book", edit_book_path(@book), class:"btn btn-primary" %>
  <p>

</div><hr>


<!-- show each review -->
<div>
  <% @book.reviews.each do |review| %>
    <%= link_to "Edit", edit_book_review_path(@book, review), class:"btn btn-default" %>
    Review: <%= review.description %><hr>
    Role: <%= review.book.user.role %>
  <% end %>
</div>


<%= render "reviews/reviewform" %>
